#!/bin/bash

# Script to ensure that ~/.profile and ~/.bashrc have been source.
#It is called at the end of ~/.profile and at the end of ~/.bashrc

if [ ! -f ~/.sourcedprofile && ! -f ~/.sourcedbashrc ]; then
  source ~/.profile
elif [ ! -f ~/.sourcedprofile && -f ~/.sourcedbashrc ]; then
  source ~/.profile
elif [ -f ~/.sourcedprofile && ! -f ~/.sourcedbashrc ]; then
  source ~/.profile
elif [ -f ~/.sourcedprofile && -f ~/.sourcedbashrc ]; then
  rm ~/.sourcedprofile ~/.sourcedbashrc
fi
